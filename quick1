}

/* Editorial Heading Style */
.prose h1 {
  font-family: 'Scharf', serif;
  font-weight: 400;
  font-size: 3.5rem;
  margin-bottom: 2rem;
  color: var(--text-main);
}

/* Dark Side Panel Links */
.sidebar-right a {
  color: #ffffff;
  text-decoration: underline;
  text-underline-offset: 4px;
  opacity: 0.8;
  transition: opacity 0.2s;
}

.sidebar-right a:hover {
  opacity: 1;
}

/* Code Blocks (High Contrast) */
pre {
  background: #1e1e1e;
  border-radius: 0px; /* Stay sharp! */
  padding: 1.5rem;
  border-left: 4px solid var(--border-color);
}
